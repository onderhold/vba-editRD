{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Move to dev-personal",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/.dev-personal/scripts/move-to-dev-personal.ps1",
                "${input:pathToMove}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id": "pathToMove",
            "type": "promptString",
            "description": "Path to move (relative to workspace root, e.g., 'docs/file.md' or 'build/')",
            "default": ""
        }
    ]
}
